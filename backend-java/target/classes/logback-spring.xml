<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- ============================================ -->
    <!-- DEV Profile: Human-Readable Console Logging -->
    <!-- ============================================ -->
    <springProfile name="dev">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <!-- Include MDC context: requestId, analysisId, ticker, period -->
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} [reqId=%X{requestId:-N/A} analysisId=%X{analysisId:-N/A}] - %msg%n</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <!-- More verbose logging for development -->
        <logger name="com.marketlens" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>
        <logger name="org.springframework.security" level="DEBUG"/>
    </springProfile>

    <!-- ============================================ -->
    <!-- PROD Profile: JSON Logging for Log Aggregation -->
    <!-- ============================================ -->
    <springProfile name="prod">
        <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <!-- MDC fields automatically included in JSON logs -->
                <includeMdcKeyName>requestId</includeMdcKeyName>
                <includeMdcKeyName>analysisId</includeMdcKeyName>
                <includeMdcKeyName>ticker</includeMdcKeyName>
                <includeMdcKeyName>period</includeMdcKeyName>
                <customFields>{"application":"marketlens-backend"}</customFields>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
        </root>

        <!-- Production log levels -->
        <logger name="com.marketlens" level="INFO"/>
        <logger name="org.springframework.web" level="WARN"/>
        <logger name="org.springframework.security" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
    </springProfile>

    <!-- ============================================ -->
    <!-- Common Loggers (All Profiles) -->
    <!-- ============================================ -->
    
    <!-- Reduce noise from third-party libraries -->
    <logger name="org.apache.tomcat" level="WARN"/>
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.springframework.boot.actuate" level="WARN"/>
    <logger name="io.micrometer" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="org.mongodb.driver" level="WARN"/>

</configuration>
